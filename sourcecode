    cout << "\t\t\t\t\tSurname: "; cin >> surname;
    fullname = name + surname;
    pragressBar();
    system("cls");
    india();
    cout << "\n"<<setw(10) << "###########################################################";
    cout << "\n" << setw(10) <<"Welcome "<<fullname<<" to Forex Exchange Of africa FEA\n";
